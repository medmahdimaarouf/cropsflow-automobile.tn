<?xml version="1.0" encoding="UTF-8"?>
<task>
    <title>Load models for each car brand</title>
    <description>
        Fetch all brands
    </description>
    <tags>
        task,automation,robots
    </tags>
    <readme src="./readme.md"/>
    <playbook>
        <mongo-create-dataset-action dataset="prix_de_neuf" drop="True">
            <http-get url="https://www.automobile.tn/fr">
                <http-html-response>
                    <html-select-all css=".brands-list>a">
                        <mongo-dataset-insert-pipe dataset="prix_de_neuf">
                            <map>
                                <html-get-attribute name="href" key="link"/>
                                <html-get-attribute css="img" name="src" key="imageUrl"/>
                                <html-get-attribute css="img" name="alt" key="name"/>
                                <http-fetch-link-action base-url="https://automobile.tn/">
                                    <http-html-response>
                                        <list key="models">
                                            <html-select-all css=".versions-item>a">
                                                <map>
                                                    <html-get-attribute name="href" key="link"/>
                                                    <html-get-attribute css="img" name="src" key="imageUrl"/>
                                                    <html-get-text-content css="h2" key="title"/>
                                                    <pipe-price key="price">
                                                        <html-get-text-content css=".price" default="0.0"/>
                                                    </pipe-price>
                                                    <list key="versions">
                                                        <http-fetch-link-action base-url="https://automobile.tn/">
                                                            <http-html-response>
                                                                <html-select-all css=".versions-item>a">
                                                                    <http-fetch-link-action
                                                                            base-url="https://automobile.tn/">
                                                                        <http-html-response>
                                                                            <map>
                                                                                <html-get-text-content
                                                                                        css="h3.page-title" key="name"/>
                                                                                <pipe-price key="price">

                                                                                </pipe-price>
                                                                            </map>
                                                                        </http-html-response>
                                                                    </http-fetch-link-action>
                                                                </html-select-all>
                                                                <map>
                                                                    <html-get-text-content css="h3.page-title"
                                                                                           key="name"/>
                                                                    <pipe-price key="price">

                                                                    </pipe-price>
                                                                </map>
                                                            </http-html-response>
                                                        </http-fetch-link-action>
                                                    </list>
                                                </map>
                                            </html-select-all>
                                        </list>
                                    </http-html-response>
                                </http-fetch-link-action>
                            </map>
                        </mongo-dataset-insert-pipe>
                    </html-select-all>
                </http-html-response>
            </http-get>
        </mongo-create-dataset-action>
    </playbook>
</task>